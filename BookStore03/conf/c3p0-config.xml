<?xml version="1.0" encoding="UTF-8"?>
<c3p0-config>
	<named-config name="webDataSource">
		<property name="jdbcUrl">jdbc:postgresql://localhost:5432/bookstore_01</property>
		<property name="driverClass">org.postgresql.Driver</property>
		<property name="user">postgres</property>
		<property name="password">postgres</property>
		<!-- 最小连接数 -->
		<property name="minPoolSize">5</property>
		<!-- 最大连接数 -->
		<property mame="maxPoolSize">30</property>
		<!-- 初始化连接数 -->
		<property name="initialPoolSize">10</property>
		<!-- 需要时一次性创建的连接数 -->
		<property name="acquireIncrement">5</property>
		<!-- 缓存多少个Statement对象 -->
		<property name="maxStatements">15</property>
	</named-config>
</c3p0-config>